<!DOCTYPE html>
<html lang="ru">
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Instatalk</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8">
      <%= yield %>
    </div>
    <% if @users&.online %>
      <div class="col-md-8">
        <div class="card text-center mt-4 mb-4">
          <div class="card-body">
            <h1>Сейчас на сайте:</h1>
            <div id="users-list">
              <ul>
                <% @users&.each do |user| %>
                  <li>
                    <%= image_tag 'green_dot.png', class: 'user-image', name: "#{user.nickname}-status" %>
                    <%= user.nickname %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</body>
</html>
